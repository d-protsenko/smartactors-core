                            <phase>none</phase>
                        </execution>
                        <execution>
                            <!--<id>archiva.servers</id>-->
                            <!--<id>default-deploy</id>-->
                            <phase>deploy</phase>
                            <goals>
                                <goal>deploy-file</goal>
