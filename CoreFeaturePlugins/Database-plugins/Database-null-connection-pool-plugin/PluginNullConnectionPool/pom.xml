            <artifactId>base.pool</artifactId>
            <version>${core.version}</version>
        </dependency>
        <dependency>
            <groupId>info.smart_tools.smartactors</groupId>
            <artifactId>database.interfaces.istorage-connection</artifactId>
            <version>${core.version}</version>
        </dependency>
