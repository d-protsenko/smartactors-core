<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>archive</id>
    <formats>
        <format>${build.format}</format>
    </formats>

    <includeBaseDirectory>${build.includeBaseDirectory}</includeBaseDirectory>

    <moduleSets>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>info.smart_tools.smartactors:email.*</include>
            </includes>
            <sources>
                <includeModuleDirectory>false</includeModuleDirectory>
                <excludes>
                    <exclude>*.iml</exclude>
                    <exclude>target/**</exclude>
                    <exclude>src/**</exclude>
                </excludes>
                <fileSets>
                    <fileSet>
                        <directory>src/main/java</directory>
                        <outputDirectory>/</outputDirectory>
                        <excludes>
                            <exclude>${build.exclude}</exclude>
                        </excludes>
                    </fileSet>
                </fileSets>
            </sources>
            <binaries>
                <dependencySets>
                    <dependencySet>
                        <unpack>${build.unpack}</unpack>
                        <scope>runtime</scope>
                        <outputDirectory>/</outputDirectory>
                        <!--<excludes>-->
                            <!--<exclude>*:*</exclude>-->
                        <!--</excludes>-->
                        <includes>
                            <include>javax.activation:activation</include>
                            <include>commons-codec:commons-codec</include>
                            <include>javax.mail:mail</include>
                            <include>io.netty:netty</include>
                            <include>org.slf4j:slf4j-api</include>
                            <include>me.normanmaurer.niosmtp:niosmtp</include>
                        </includes>
                    </dependencySet>
                </dependencySets>
                <outputDirectory>/</outputDirectory>
                <unpack>${build.unpack}</unpack>
            </binaries>
        </moduleSet>
    </moduleSets>
    <files>
        <file>
            <source>../config.json</source>
        </file>
    </files>
</assembly>
