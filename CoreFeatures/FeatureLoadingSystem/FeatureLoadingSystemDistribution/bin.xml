<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>archive</id>
    <formats>
        <format>${build.format}</format>
    </formats>

    <includeBaseDirectory>${build.includeBaseDirectory}</includeBaseDirectory>

    <moduleSets>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>info.smart_tools.smartactors:feature-loading-system.*</include>
            </includes>
            <excludes>
                <exclude>info.smart_tools.smartactors:feature-loading-system.test-jar</exclude>
            </excludes>
            <binaries>
                <dependencySets>
                    <dependencySet>
                        <unpack>${build.unpack}</unpack>
                        <scope>runtime</scope>
                        <outputDirectory>/</outputDirectory>
                        <excludes>
                            <exclude>*:*</exclude>
                        </excludes>
                        <!--<includes>-->
                        <!--</includes>-->
                    </dependencySet>
                </dependencySets>
                <outputDirectory>/</outputDirectory>
                <unpack>${build.unpack}</unpack>
            </binaries>
        </moduleSet>
    </moduleSets>
    <files>
        <file>
            <source>../config.json</source>
        </file>
    </files>
</assembly>
