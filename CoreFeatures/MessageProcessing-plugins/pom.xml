<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>info.smart_tools.smartactors</groupId>
        <artifactId>core-features</artifactId>
        <version>0.6.0</version>
    </parent>
    <groupId>info.smart_tools.smartactors</groupId>
    <artifactId>message-processing-plugins</artifactId>
    <version>0.6.0</version>
    <packaging>pom</packaging>
    <modules>
        <module>PluginReceiverGenerator</module>
        <module>PluginExceptionHandlingReceivers</module>
        <module>PluginWrapperGenerator</module>
        <module>PluginReceiverChainsStorage</module>
        <module>PluginHandlerRoutingReceiverCreator</module>
        <module>PluginReceiverChain</module>
        <module>PluginMessagingIdentifiers</module>
        <module>PluginMapRouter</module>
        <module>PluginConstantChainChoiceStrategy</module>
        <module>PluginChainChoiceStrategy</module>
        <module>PluginMessageProcessorAndSequence</module>
        <module>PluginChainCallReceiver</module>
        <module>PluginActorReceiverCreator</module>
        <module>PluginStarter</module>
        <module>PluginStandardObjectCreators</module>
        <module>PluginConditionChainChoiceStrategy</module>
        <module>ObjectCreationStrategiesPlugin</module>
        <module>NullResponseStrategyPlugin</module>
        <module>ResponseSenderReceiverPlugin</module>
        <module>ChainModificationStrategiesPlugin</module>
        <module>SignalsPlugin</module>
        <module>MessageProcessorShutdownPlugin</module>
        <module>WrapperCreatorReceiverDecoratorPlugin</module>
        <module>MessageProcessing-pluginsDistribution</module>
    </modules>
    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>3.5.1</version>
                    <configuration>
                        <source>1.8</source>
                        <target>1.8</target>
                    </configuration>
                </plugin>
                <plugin>
                    <artifactId>maven-surefire-plugin</artifactId>
                    <version>2.19.1</version>
                    <configuration>
                        <useSystemClassLoader>false</useSystemClassLoader>
                    </configuration>
                </plugin>
                <plugin>
                    <artifactId>maven-deploy-plugin</artifactId>
                    <version>2.8.2</version>
                    <executions>
                        <execution>
                            <id>default-deploy</id>
                            <phase>none</phase>
                        </execution>
                        <execution>
                            <id>${feature.rid}</id>
                            <phase>deploy</phase>
                            <goals>
                                <goal>deploy-file</goal>
                            </goals>
                            <inherited>false</inherited>
                            <configuration>
                                <generatePom>true</generatePom>
                                <file>${project.parent.basedir}/project-distribution/${project.artifactId}-${project.version}.${deploy.format}</file>
                                <url>${feature.rurl}</url>
                                <repositoryId>${feature.rid}</repositoryId>
                                <groupId>${project.groupId}</groupId>
                                <artifactId>${project.artifactId}</artifactId>
                                <version>${project.version}</version>
                                <packaging>${deploy.format}</packaging>
                                <description>This archive contains ...</description>
                                <classifier>${deploy.classifier}</classifier>
                            </configuration>
                        </execution>
                    </executions>
                    <inherited>true</inherited>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
</project>
